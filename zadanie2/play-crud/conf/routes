# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                                            controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)


# Address
GET         /addresses/form                              controllers.AddressController.getAddressesForm()

GET         /addresses                                   controllers.AddressController.getAddresses()
GET         /address/:id                                 controllers.AddressController.getAddress(id: Int)
GET         /deleteaddress/:id                           controllers.AddressController.delete(id: Int)
POST        /addaddress                                  controllers.AddressController.addProduct()

# Cart
GET         /carts/form                                  controllers.CartController.getCartsForm()

GET         /carts                                       controllers.CartController.getCarts()
GET         /cart/:id                                    controllers.CartController.getCart(id: Int)
GET         /customercart/:customer_id                   controllers.CartController.getCustomerCart(customer_id: Int)
GET         /deletecart/:id                              controllers.CartController.delete(id: Int)
POST        /addcart                                     controllers.CartController.addCart()

# CartItem
GET         /cartitems/form                              controllers.CartItemController.getCartItemsForm()

GET         /cartitems/:cart_id                          controllers.CartItemController.getCartItems(cart_id: Int)
GET         /cartitem/:id                                controllers.CartItemController.getCartItem(id: Int)
GET         /deletecartitem/:id/cart/:cart_id            controllers.CartItemController.delete(id: Int, cart_id: Int)
POST        /addcartitem                                 controllers.CartItemController.addCartItem()

# Category
GET         /categories/form                             controllers.CategoryController.getCategoriesForm()

GET         /categories                                  controllers.CategoryController.getCategories()
GET         /category/:id                                controllers.CategoryController.getCategory(id: Int)
GET         /deletecategory/:id                          controllers.CategoryController.delete(id: Int)
POST        /addcategory                                 controllers.CategoryController.addCategory()

# Coupon
GET         /coupons/form                                controllers.CouponController.getCouponsForm()

GET         /coupons                                     controllers.CouponController.getCoupons()
GET         /coupon/:id                                  controllers.CouponController.getCoupon(id: Int)
GET         /deletecoupon/:id                            controllers.CouponController.delete(id: Int)
POST        /addcoupon                                   controllers.CouponController.addCoupon()

# Customer
GET         /customers/form                              controllers.CustomerController.getCustomersForm()

GET         /customers                                   controllers.CustomerController.getCustomers()
GET         /customer/:id                                controllers.CustomerController.getCustomer(id: Int)
GET         /deletecustomer/:id                          controllers.CustomerController.delete(id: Int)
POST        /addcustomer                                 controllers.CustomerController.addCoupon()

# Order
GET         /orders/form                                 controllers.OrderController.getOrdersForm()

GET         /orders                                      controllers.OrderController.getOrders()
GET         /order/:id                                   controllers.OrderController.getOrder(id: Int)
GET         /customerorder/:customer_id                  controllers.OrderController.getCustomerOrder(customer_id: Int)
GET         /deleteorder/:id                             controllers.OrderController.delete(id: Int)
POST        /addorder                                    controllers.OrderController.addOrder()

# OrderItem
GET         /orderItems/form                             controllers.OrderItemController.getOrderItemsForm()

GET         /orderItems/:order_id                        controllers.OrderItemController.getOrderItems(order_id: Int)
GET         /orderItem/:id                               controllers.OrderItemController.getOrderItem(id: Int)
GET         /deleteorderItems/:id/order/:order_id        controllers.OrderItemController.delete(id: Int, order_id: Int)
POST        /addorderItem                                controllers.OrderItemController.addOrderItem()

# Product
GET         /products/form                               controllers.ProductController.getProductsForm()

GET         /products                                    controllers.ProductController.getProducts()
GET         /product/:id                                 controllers.ProductController.getProduct(id: Int)
GET         /deleteproduct/:id                           controllers.ProductController.delete(id: Int)
POST        /addproduct                                  controllers.ProductController.addProduct()

# Review
GET         /reviews/form                                controllers.ReviewController.getReviewForm()

GET         /reviews                                     controllers.ReviewController.getReviews()
GET         /review/:id                                  controllers.ReviewController.getReview(id: Int)
GET         /customerreviews/:customer_id                controllers.ReviewController.getCustomerReviews(customer_id: Int)
GET         /productreviews/:product_id                  controllers.ReviewController.getProductReviews(product_id: Int)
GET         /deletereview/:id                            controllers.ReviewController.delete(id: Int)
POST        /addreview                                   controllers.ReviewController.addCart()